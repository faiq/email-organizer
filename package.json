{
  "name": "email-organizer",
  "version": "1.0.0",
  "description": "react app to help sort out your emails",
  "main": "index.js",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "browserify app.js > ./public/bundle.js && npm run build-css",
    "build-css": "sass ./public/styles/custom.scss > ./public/styles/custom.css",
    "serve": "ecstatic -p 8000 public",
    "start": "npm run build-css && npm run serve & npm run watch",
    "watch": "watchify app.js -o public/bundle.js -dv"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faiq/email-organizer.git"
  },
  "author": "faiq",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/faiq/email-organizer/issues"
  },
  "homepage": "https://github.com/faiq/email-organizer#readme",
  "dependencies": {
    "babelify": "^6.1.3",
    "backbone": "^1.2.2",
    "browserify": "^11.0.1",
    "ecstatic": "^0.8.0",
    "flux": "^2.1.1",
    "jquery": "^2.1.4",
    "keymirror": "^0.1.1",
    "react": "^0.13.3",
    "react-dnd": "^1.1.4",
    "watchify": "^3.3.1"
  }
}
